CREATE DATABASE INFORMATION;
USE INFORMATION;

CREATE TABLE STUDENT(
ID INT PRIMARY KEY,
NAME VARCHAR(50) NOT NULL,
CITY VARCHAR(50)
);

INSERT INTO STUDENT( ID, NAME, CITY )
VALUES( 101, "Samir", "DHAKA" ),
( 102, "YASIN", "KHULNA"),
( 103, "AJOY", "DHAKA"),
( 104, "KASHIF", "DHAKA");

SELECT * FROM STUDENT;
SELECT * FROM STUDENT WHERE CITY = "DHAKA" AND NAME = "AJOY";
SELECT NAME, CITY FROM STUDENT;
SELECT DISTINCT CITY FROM STUDENT;

ALTER TABLE STUDENT
ADD FEES INT DEFAULT 3000;
TRUNCATE STUDENT;

INSERT INTO STUDENT VALUES(105, "KABIR", "RAJSHAHI", 2000);

INSERT INTO STUDENT (ID, NAME, CITY) VALUES(106, "ABIR", "RAJSHAHI");

CREATE TABLE VOTER(
ID INT PRIMARY KEY,
AGE INT CHECK( AGE >= 18),
CITY VARCHAR(50) DEFAULT "DHAKA"
);

INSERT INTO VOTER(ID, AGE)
VALUES( 1, 18),
( 2, 20);

SELECT * FROM VOTER;
SELECT CGPA FROM VOTER;
SELECT * FROM VOTER WHERE CITY IN ("DHAKA");

UPDATE VOTER SET CITY = "KALIA"
WHERE ID = "2";

ALTER TABLE VOTER ADD COLUMN
CGPA DOUBLE NOT NULL;

INSERT INTO VOTER (ID, AGE) VALUES(3, 45);
INSERT INTO VOTER(ID, AGE, CGPA)
VALUES(4, 32, 4.6);
